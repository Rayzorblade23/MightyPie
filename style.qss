/* Style the window background */
QWidget {
    background-color: rgba(255, 255, 255, 0.01); /* Semi-transparent white */
    border-radius: 15px;       /* Rounded corners */
}

/* Style the Title Bar Button Widget */
#buttonWidget {
    background-color: transparent;  /* Light background for the layout container */
    border-radius: 15px;
}

/* Style the button */
QPushButton {
    background-color: {{bg_color}}; /* Blue */
    color: white;              /* White text */
    font-size: 12px;           /* Font size */
    border: 1px solid {{accent_color}};              /* No border */
    border-radius: 5px;        /* Rounded corners */
    opacity:1.0;
}

/* Style the button */
#triangle {
    background-color: rgba(128,128,128,0.1);
    border: none;              /* No border */
}
#triangle:hover {
    background-color: rgba(128,128,128,0.4);
    border: none;              /* No border */
}
#triangle:pressed {
    background-color: rgba(128,128,128,0.8);
    border: none;              /* No border */
}

QPushButton:hover {
    background-color: {{accent_muted}}; /* Darker blue on hover */
}


QPushButton:pressed {
    background-color: {{accent_color}}; /* Even darker blue when pressed */
}

QPushButton:disabled {
    border: 1px solid #333333;
}

QLabel:disabled {
    color: gray;
}

QLabel {
    color: white;              /* White text */
    /*    font-family: "Comic Sans MS";*/
    /*    background: #ff0f0f;*/
    background: transparent;
}

#refreshButton {
    background-color: rgba(27, 27, 27, 150);
    color: white;
    border: none;
    font-size: 12px;
    border-radius: 20px;
}

#refreshButton:hover {
    background-color: rgba(27, 27, 27, 255);
}

#minimizeButton, #maximizeButton {
    background-color: rgba(27, 27, 27, 255);
    color: white;
    border: none;
    font-size: 12px;
    border-radius: 2px;
}


#closeButton {
    background-color: rgba(206, 63, 63, 255);
    color: white;
    border: none;
    font-size: 12px;
    border-radius: 2px;
}

#minimizeButton:hover, #maximizeButton:hover {
    background-color: rgba(54, 54, 54, 255);
}

#closeButton:hover {
    background-color: rgba(255, 0, 0, 255);
}